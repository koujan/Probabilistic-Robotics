<launch>

  <!-- Read launch arguments -->
  <arg name="x" default="0"/>
  <arg name="y" default="0"/>
  <arg name="theta" default="0"/>
  <arg name="sym" default="False"/>
  <arg name="file" default="0"/>

  <!-- If symulation include the turtlebot_gazebo turtlebto_empty_world.launch -->
  <group if="$(arg sym)">
    <include file="$(find turtlebot_gazebo)/launch/turtlebot_empty_world.launch"/>
  </group>

  <!-- Set the arguments to parameters -->
  <param name="x" value="$(arg x)"/>
  <param name="y" value="$(arg y)"/>
  <param name="theta" value="$(arg theta)"/>
  <param name="file" value="$(arg file)"/>

  <!-- Turtlebot Driver node -->
  <node pkg="lab1_turtlebot" type="node.py" name="driver" output="screen"/>

</launch>
